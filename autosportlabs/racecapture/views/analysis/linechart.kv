<LineChart>:
    options_enabled: True
    canvas.before:
        Color:
            rgba: ColorScheme.get_dark_background_translucent()
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        FieldLabel:
            halign: 'center'
            text: '' if root.laps_selected and root.channels_selected else "Select a channel to view data" if root.laps_selected else "Select a lap to view data"
            color: ColorScheme.get_dark_primary_text()
            font_size: self.height * 0.2
	Graph:
        border_color: 0, 0, 0, 0
		id: chart
		xmax: 0
		ymax: 0
		xmin: 0
		ymin: 0
